[Unit]
Description=DIRT Daemon Service

[Service]
WorkingDirectory=/opt/dirtd/dirt-scraper
ExecStart=/usr/bin/java -Xms128m -Xmx1G \
        -cp "dirtd.jar:lib/*" \
        -Dconfig="cfg/db.ini" \
        -Dlog4j.configurationFile="cfg/log4j2.xml" \
        dev.pagefault.eve.dirtd.DirtDaemon

User=dirt
Type=simple
Restart=on-failure
RestartSec=10
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
